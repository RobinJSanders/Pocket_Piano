<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rob.pocket_piano.MainActivity">

    <LinearLayout
        android:id="@+id/LinearLayout_PianoKeys"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/grey"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/Btn_C"
            style="@style/WhitePianoKey"
            android:text="C"/>

        <Button
            android:id="@+id/Btn_Cs"
            style="@style/BlackPianoKey"
            android:text="C#"/>

        <Button
            android:id="@+id/Btn_D"
            style="@style/WhitePianoKey"
            android:text="D"/>

        <Button
            android:id="@+id/Btn_Ds"
            style="@style/BlackPianoKey"
            android:text="D#"/>

        <Button
            android:id="@+id/Btn_E"
            style="@style/WhitePianoKey"
            android:text="E"/>

        <Button
            android:id="@+id/Btn_F"
            style="@style/WhitePianoKey"
            android:text="F"/>

        <Button
            android:id="@+id/Btn_Fs"
            style="@style/BlackPianoKey"
            android:text="F#"/>

        <Button
            android:id="@+id/Btn_G"
            style="@style/WhitePianoKey"
            android:text="G"/>

        <Button
            android:id="@+id/Btn_Gs"
            style="@style/BlackPianoKey"
            android:text="G#"/>

        <Button
            android:id="@+id/Btn_A"
            style="@style/WhitePianoKey"
            android:text="A"/>

        <Button
            android:id="@+id/Btn_As"
            style="@style/BlackPianoKey"
            android:text="A#"/>

        <Button
            android:id="@+id/Btn_B"
            style="@style/WhitePianoKey"
            android:text="B"/>

        <Button
            android:id="@+id/Btn_C_High"
            style="@style/WhitePianoKey"
            android:text="C"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LiniearLayout_VoiceButtons"
        android:layout_width="731dp"
        android:layout_height="67dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout_PianoKeys"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="2dp"
        app:layout_constraintHorizontal_bias="0.489">

        <Button
            android:id="@+id/Btn_Piano"
            style="@style/VoiceButtonSelected"
            android:text="Piano"/>

        <Button
            android:id="@+id/Btn_Bass"
            style="@style/VoiceButtonDeselected"
            android:text="Bass"/>

        <Button
            android:id="@+id/Btn_Brass"
            style="@style/VoiceButtonDeselected"
            android:text="Brass"/>

        <Button
            android:id="@+id/Btn_Banjo"
            style="@style/VoiceButtonDeselected"
            android:text="Banjo"/>

        <Button
            android:id="@+id/Btn_Synth"
            style="@style/VoiceButtonDeselected"
            android:text="Synth"/>
    </LinearLayout>


