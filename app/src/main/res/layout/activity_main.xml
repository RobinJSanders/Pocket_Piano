<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rob.pocket_piano.MainActivity">

    <LinearLayout
        android:id="@+id/LinearLayout_PianoKeys"
        android:layout_width="0dp"
        android:layout_height="155sp"
        android:background="@color/grey"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/Btn_C_Low"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="C"/>

        <Button
            android:id="@+id/Btn_Cs_Low"
            style="@style/BlackPianoKey"
            android:visibility="gone"
            android:text="C#"/>

        <Button
            android:id="@+id/Btn_D_Low"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="D"/>

        <Button
            android:id="@+id/Btn_Ds_Low"
            style="@style/BlackPianoKey"
            android:visibility="gone"
            android:text="D#"/>

        <Button
            android:id="@+id/Btn_E_Low"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="E"/>

        <Button
            android:id="@+id/Btn_F_Low"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="F"/>

        <Button
            android:id="@+id/Btn_Fs_Low"
            style="@style/BlackPianoKey"
            android:visibility="gone"
            android:text="F#"/>

        <Button
            android:id="@+id/Btn_G_Low"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="G"/>

        <Button
            android:id="@+id/Btn_Gs_Low"
            style="@style/BlackPianoKey"
            android:visibility="gone"
            android:text="G#"/>

        <Button
            android:id="@+id/Btn_A_Low"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="A"/>

        <Button
            android:id="@+id/Btn_As_Low"
            style="@style/BlackPianoKey"
            android:visibility="gone"
            android:text="A#"/>

        <Button
            android:id="@+id/Btn_B_Low"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="B"/>

        <Button
            android:id="@+id/Btn_C"
            style="@style/WhitePianoKey"
            android:text="C"/>

        <Button
            android:id="@+id/Btn_Cs"
            style="@style/BlackPianoKey"
            android:text="C#"/>

        <Button
            android:id="@+id/Btn_D"
            style="@style/WhitePianoKey"
            android:text="D"/>

        <Button
            android:id="@+id/Btn_Ds"
            style="@style/BlackPianoKey"
            android:text="D#"/>

        <Button
            android:id="@+id/Btn_E"
            style="@style/WhitePianoKey"
            android:text="E"/>

        <Button
            android:id="@+id/Btn_F"
            style="@style/WhitePianoKey"
            android:text="F"/>

        <Button
            android:id="@+id/Btn_Fs"
            style="@style/BlackPianoKey"
            android:text="F#"/>

        <Button
            android:id="@+id/Btn_G"
            style="@style/WhitePianoKey"
            android:text="G"/>

        <Button
            android:id="@+id/Btn_Gs"
            style="@style/BlackPianoKey"
            android:text="G#"/>

        <Button
            android:id="@+id/Btn_A"
            style="@style/WhitePianoKey"
            android:text="A"/>

        <Button
            android:id="@+id/Btn_As"
            style="@style/BlackPianoKey"
            android:text="A#"/>

        <Button
            android:id="@+id/Btn_B"
            style="@style/WhitePianoKey"
            android:text="B"/>

        <Button
            android:id="@+id/Btn_C_High"
            style="@style/WhitePianoKey"
            android:text="C"/>


        <Button
            android:id="@+id/Btn_Cs_High"
            style="@style/BlackPianoKey"
            android:visibility="gone"
            android:text="C#"/>

        <Button
            android:id="@+id/Btn_D_High"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="D"/>

        <Button
            android:id="@+id/Btn_Ds_High"
            style="@style/BlackPianoKey"
            android:visibility="gone"
            android:text="D#"/>

        <Button
            android:id="@+id/Btn_E_High"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="E"/>

        <Button
            android:id="@+id/Btn_F_High"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="F"/>

        <Button
            android:id="@+id/Btn_Fs_High"
            style="@style/BlackPianoKey"
            android:visibility="gone"
            android:text="F#"/>

        <Button
            android:id="@+id/Btn_G_High"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="G"/>

        <Button
            android:id="@+id/Btn_Gs_High"
            style="@style/BlackPianoKey"
            android:visibility="gone"
            android:text="G#"/>

        <Button
            android:id="@+id/Btn_A_High"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="A"/>

        <Button
            android:id="@+id/Btn_As_High"
            style="@style/BlackPianoKey"
            android:visibility="gone"
            android:text="A#"/>

        <Button
            android:id="@+id/Btn_B_High"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="B"/>

        <Button
            android:id="@+id/Btn_C_Top"
            style="@style/WhitePianoKey"
            android:visibility="gone"
            android:text="C"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LiniearLayout_VoiceButtons"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout_PianoKeys"
        >

        <Button
            android:id="@+id/Btn_Piano"
            style="@style/VoiceButtonSelected"
            android:text="Piano"/>

        <Button
            android:id="@+id/Btn_Bass"
            style="@style/VoiceButtonDeselected"
            android:text="Bass"/>

        <Button
            android:id="@+id/Btn_Brass"
            style="@style/VoiceButtonDeselected"
            android:text="Brass"/>

        <Button
            android:id="@+id/Btn_Banjo"
            style="@style/VoiceButtonDeselected"
            android:text="Banjo"/>

        <Button
            android:id="@+id/Btn_Synth"
            style="@style/VoiceButtonDeselected"
            android:text="Synth"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LiniearLayout_RecordPlaybackButtons"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_marginTop="-8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LiniearLayout_VoiceButtons">

        <ImageButton
            android:id="@+id/Btn_Record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/rec"

            android:text="Record"/>

        <ImageButton
            android:id="@+id/Btn_Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/stop"
            android:visibility="gone"
            />


        <ImageButton
            android:id="@+id/Btn_Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/play"
            />
        <TextView
            android:id="@+id/Lbl_State"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready"
            android:layout_marginTop="15sp"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/LiniearLayout_Settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/LiniearLayout_RecordPlaybackButtons"
        app:layout_constraintLeft_toLeftOf="parent"

        >

        <CheckBox
            android:id="@+id/Chk_Loop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Loop Playback"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="263dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LiniearLayout_BeatButtons"
        android:layout_width="166dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LiniearLayout_VoiceButtons"
        >

        <Button
            android:id="@+id/Btn_Beat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Start Beat"
            />

        <Button
            android:id="@+id/Btn_BeatStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Stop Beat"
            android:visibility="gone"
            />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>